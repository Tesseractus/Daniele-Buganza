<%- include('_header.ejs') %>
 <!-- Css Login-->
 <link rel="stylesheet" href="Styles/Login.css">
<%- include('_headerFooter.ejs') %>
        <div class="loginForm">
                <div class="loginContainer">
                    <div class="errorMessage"><%= typeof errMessage != 'undefined' ? errMessage : '' %></div>
                    
                    <form action="/auth" method="post" >
                        <div class="form-group">
                            <input type="text" name="username" style="margin-bottom: 1vh;" class="form-control" id="username" placeholder="Username" required>
                            <input type="password" name="password" style="margin-bottom: 1vh;" class="form-control" id="password" placeholder="Password" required>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
        </div>
<%- include('_footer.ejs') %>
